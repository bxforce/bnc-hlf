{
  "name": "bnc",
  "version": "0.0.1",
  "description": "The CLI deployment tool for Hyperledger enterprise blockchains",
  "main": "commands.js",
  "private": true,
  "cacheDirectories": [
    "node_modules"
  ],
  "files": [
    "bin/*",
    "dist/*",
    "docs/*",
    "package.json"
  ],
  "bin": {
    "bnc": "./dist/command.js"
  },
  "engines": {
    "node": ">=12.15.1"
  },
  "scripts": {
    "clean": "rimraf dist",
    "build": "npm run clean && tsc",
    "watch": "npm run clean && tsc -w",
    "prepare": "npm run build",
    "lint": "tslint --fix -c './tslint.json' -p -p './tsconfig.json'",
    "test": "jest --detectOpenHandles"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bxforce/bnc-hlf.git"
  },
  "keywords": [
    "bnc",
    "development",
    "hyperledger",
    "fabric",
    "environment",
    "blockchain",
    "hyperledger fabric"
  ],
  "authors": [
    {
      "name": "Wassim Znaidi",
      "email": "wassim.znaidi@gmail.com"
    },
    {
      "name": "Sahar Fehri",
      "email": "sahar.fehri@irt-systemx.fr"
    },
    {
      "name": "Ahmed Souissi",
      "email": "ahmed.souissi@irt-systemx.fr"
    },
    {
      "name": "Chiraz Chaabane",
      "email": "chiraz.chaabane@irt-systemx.fr"
    }
  ],
  "dependencies": {
    "bytebuffer": "5.0.1",
    "chalk": "3.0.0",
    "commander": "5.1.0",
    "docker-compose": "0.23.6",
    "dockerode": "3.2.1",
    "ejs": "3.1.6",
    "fabric-ca-client": "2.2.5",
    "fabric-client": "1.4.17",
    "fabric-network": "2.2.5",
    "fs-extra": "9.1.0",
    "js-yaml": "3.14.1",
    "mem-fs": "1.2.0",
    "mem-fs-editor": "6.0.0",
    "path": "0.12.7",
    "shelljs": "0.8.4",
    "yaml-validator": "2.2.0"
  },
  "devDependencies": {
    "@types/fs-extra": "8.1.1",
    "@types/jest": "26.0.20",
    "@types/js-yaml": "3.12.6",
    "@types/node": "12.20.5",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "jest": "26.6.3",
    "prettier": "1.19.1",
    "rimraf": "3.0.2",
    "ts-jest": "26.5.3",
    "ts-node": "8.10.2",
    "tsc": "1.20150623.0",
    "tslint": "6.1.3",
    "typescript": "3.9.9"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testRegex": "(/test/.*|\\.(spec))\\.(ts|js)$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "coverage",
    "testEnvironment": "node"
  }
}
